<p style="color: green"><%= notice %></p>

<% content_for :title, "Todos" %>

<h1 class="display-1">To-Do List</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Task</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td>
          <p class="NoPaddingOrMargin fs-5">
            <%= todo.task %>
            <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#<%= dom_id todo%>">
              <img src="/images/edit.png", height=28, class="img">
            </button>
          </p>
          

        <div class="modal fade" id="<%= dom_id todo%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Editing todo</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <%= render "form", todo: todo%>
              </div>
            </div>
          </div>
        </div>

        </td>
      
        <td>
          <%= simple_form_for todo do |f|%>
            <%= f.input :status, as: :boolean, label: false, :input_html => {:onchange => "this.form.requestSubmit()"}%>
          <% end %>
        </td>
      </tr>

        
    <% end %>
  </tbody>
</table>

<%= link_to "New todo", new_todo_path, class:"btn btn-secondary"%>
